<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.qr.interfaces.RegistroClienteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivLogo2"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/logo3"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Registro Cliente"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=" Nombre(s):"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/nombreET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="15"
                android:hint="Ingresa tu(s) nombre(s)"
                android:inputType="text"
                android:textColorHint="@color/white2"
                android:textStyle="italic"
                tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Apellidos:"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/apellidosET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="15"
                android:hint="Ingresa tus apellidos"
                android:inputType="text"
                android:textColorHint="@color/white2"
                android:textStyle="italic"
                tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fecha de nacimiento:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/fechaET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="15"
                android:hint="Selecciona tu fecha de nacimiento"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/white2"
                android:textStyle="italic"
                tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="CURP:"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/curpET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="15"
                android:hint="Ingresa tu CURP"
                android:inputType="text"
                android:textColorHint="@color/white2"
                android:textStyle="italic"
                tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña:"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="Ingresa una contraseña"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/white2"
                android:textStyle="italic"
                tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Sexo:"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <EditText
                        android:id="@+id/sexoET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:hint="Masculino o Femenino"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textColorHint="@color/white2"
                        android:textStyle="italic"
                        tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="00dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Condición:"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <EditText
                        android:id="@+id/condicionET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:hint="Embarazo, ECD o Discapacidad"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textColorHint="@color/white2"
                        android:textStyle="italic"
                        tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnIngresar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="Registrarme"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextText2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvISColab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:text="@string/colaborador2"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>