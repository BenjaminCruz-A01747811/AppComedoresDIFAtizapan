<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.menudia.MenuDiaFragment">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="8dp"
                android:contentDescription=""
                android:text="@string/fecha"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="16dp"
                android:contentDescription=""
                android:text="@string/desayuno"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="italic" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="8dp"
                android:contentDescription=""
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/desayuno" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="32dp"
                android:contentDescription=""
                android:text="@string/comida"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="italic" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView2"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="17dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/cena"
                tools:ignore="ImageContrastCheck" />

            <Button
                android:id="@+id/btnParaLlevar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:text="@string/para_llevar"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtMenuDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>